server {
  listen 80;
  listen [::]:80;

  server_name <%= @app.url %>;
  root <%= @app.path %>/current/public;

<% if @app.passenger? %>
  passenger_enabled on;
<% if @app.ruby? %>
  passenger_ruby /opt/rbenv/versions/<%= @app.ruby %>/bin/ruby;
<% end %>
<% @app.env.each do |var, val| %>
  passenger_env_var <%= var %> <%= val %>;
<% end %>
<% end %>

  error_page 404 422 500 /x.html;
  location = /x.html {
    root html;
  }
}
