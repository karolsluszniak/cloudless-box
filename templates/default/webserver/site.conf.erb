server {
  listen 80;
  listen [::]:80;

  server_name <%= @url %>;
  root <%= @path %>/current/public;

  passenger_enabled on;
<% if @ruby_version %>
  passenger_ruby /opt/rbenv/versions/<%= @ruby_version %>/bin/ruby;
<% end %>
  passenger_app_env production;

  error_page 404 422 500 /x.html;
  location = /x.html {
    root html;
  }
}
